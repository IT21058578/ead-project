<!-- res/drawable/fading_shadow_with_gradient.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fading Shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/primary_green"
                android:centerColor="@color/primary_green"
                android:endColor="@color/primary_green"
                android:angle="45"/>
            <corners
                android:bottomLeftRadius="123dp"
                android:bottomRightRadius="123dp"/>
        </shape>
    </item>

    <!-- Main Gradient -->
    <item android:bottom="12dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/primary_green"
                android:endColor="@color/charcoal_gray"
                android:angle="45"/>
            <corners
                android:bottomLeftRadius="223dp"
                android:bottomRightRadius="100dp"/>
        </shape>
    </item>

</layer-list>
